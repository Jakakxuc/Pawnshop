<Page x:Class="PawnshopApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PawnshopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginTextBox" Width="200" Height="30"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30"/>

            <Button Content="Получить маску пароля" Width="140" Height="30" Click="GetPasswordMask_Click"/>
            <Button Content="Войти" Width="140" Height="30" Click="LoginButton_Click"/>
            <Button Content="Зарегистрироваться" Width="140" Height="30" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
