<Window x:Class="PawnshopApp.Pages.AddCustomerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PawnshopApp.Pages"
        mc:Ignorable="d"
        Title="Добавить клиента" Height="300" Width="400">
    <Grid>
        <Grid>
            <!-- Add input fields for customer information -->
            <StackPanel Margin="10">
                <TextBlock Text="Имя:"/>
                <TextBox x:Name="NameTextBox" Margin="0 5"/>
                <TextBlock Text="Фамилия:"/>
                <TextBox x:Name="SurnameTextBox" Margin="0 5"/>
                <TextBlock Text="Номер телефона:"/>
                <TextBox x:Name="PhoneNumberTextBox" Margin="0 5"/>
                <Button Content="Добавить" HorizontalAlignment="Center" Click="AddCustomer_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
