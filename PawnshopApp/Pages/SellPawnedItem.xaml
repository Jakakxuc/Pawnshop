<Window x:Class="PawnshopApp.Pages.SellPawnedItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PawnshopApp.Pages"
        mc:Ignorable="d"
        Title="Продать заложенный предмет" Height="100" Width="200">
    <Grid>
        <StackPanel Margin="0 5">
            <TextBlock Text="Сумма продажи:" FontWeight="Bold"/>
            <TextBox x:Name="SellAmountTextBox"
                   Text="{Binding PaymentAmount}"
                   Margin="0 1"/>
        </StackPanel>

        <Button Content="Продать" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Click="Sell_Click" Margin="0 10"/>
    </Grid>
</Window>
